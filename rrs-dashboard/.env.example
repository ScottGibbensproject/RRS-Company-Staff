# RRS Dashboard Configuration
# Copy this file to .env and fill in your values

# ===========================================
# SERVER SETTINGS
# ===========================================
PORT=3000
NODE_ENV=development

# ===========================================
# AUTHENTICATION
# ===========================================
# Simple password (for initial setup)
DASHBOARD_PASSWORD=changeme

# Or use a bcrypt hash (more secure)
# Generate hash: http://localhost:3000/auth/hash/yourpassword
# DASHBOARD_PASSWORD_HASH=

# Session secret (change this to a random string)
SESSION_SECRET=change-this-to-a-random-string

# ===========================================
# GOHIGHLEVEL (GHL)
# ===========================================
# Get from: Settings > Business Profile > API Key
GHL_API_KEY=

# ===========================================
# VONAGE BUSINESS
# ===========================================
# Get from: developer.vonage.com
VONAGE_API_KEY=
VONAGE_API_SECRET=

# ===========================================
# MICROSOFT OUTLOOK (Azure)
# ===========================================
# Get from: portal.azure.com > App Registrations
OUTLOOK_CLIENT_ID=
OUTLOOK_CLIENT_SECRET=
OUTLOOK_TENANT_ID=

# ===========================================
# TRELLO
# ===========================================
# Get from: trello.com/power-ups/admin
TRELLO_API_KEY=
TRELLO_TOKEN=

# ===========================================
# USERBACK
# ===========================================
# Get from: Userback Dashboard > Settings
USERBACK_API_TOKEN=

# ===========================================
# GOOGLE CLOUD (App Engine Monitoring)
# ===========================================
# Path to service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=./gcp-service-account.json
GCP_PROJECT_ID=
